<s:Window xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:s="library://ns.adobe.com/flex/spark"
  xmlns:mx="library://ns.adobe.com/flex/mx"
  width="1024" height="700">
  <s:layout>
    <s:VerticalLayout paddingLeft="20" paddingTop="20" paddingRight="20" paddingBottom="20"/>
  </s:layout>
  <s:HGroup>
	<s:Image source="@Embed('assets/logo.png')" />
  </s:HGroup>
  <s:HGroup>
	  <s:Form width="200">
		  <s:FormItem>
			  <s:Button id="browseImport" label="Set Import Directory"/>
			  <s:Label id="importRoot" text="Not Set"/>
			  <s:Button id="reload" label="Reload" width="80" enabled="false" visible="false"/>
		  </s:FormItem>
	  </s:Form>
	  <s:Form width="200">
		  <s:FormItem>
				  <s:Button id="browseExport" label="Set Export Directory"/>
				  <s:Label id="exportRoot" text="Not Set"/>
		  </s:FormItem>
	  </s:Form>
	  <s:Form width="200">
	  <s:FormItem label="Resolution:">
		  <s:VGroup>
			  <s:Label id="formatOverview"/>
			  <s:Button id="editFormats" width="40" label="..." visible="true"/>
		  </s:VGroup>
	  </s:FormItem>
	  </s:Form>
  </s:HGroup>
  <s:HGroup>
    <s:DataGrid id="libraries" width="475" height="300">
      <s:typicalItem>
        <s:DataItem path="multiple/segment/nested/path/of/some/depth" modified="" valid=""/>
      </s:typicalItem>
      <s:columns>
        <s:ArrayList>
          <s:GridColumn dataField="path" headerText="Flash Source" width="200"/> 
          <s:GridColumn dataField="modified" headerText="Modified" visible="false"/>
		  <s:GridColumn dataField="ccbfile" headerText="CCB Prefix" editable="false" width="150"/>
          <s:GridColumn dataField="valid" headerText="Status" width="55"/>
        </s:ArrayList>
      </s:columns>
      <mx:ArrayCollection/>
    </s:DataGrid>
    <!-- Both the Form and the FormItems need widths on them to make the percentage work -->
    <s:VGroup width="250">
        <s:FormItem width="250" >
          <s:VGroup>
            <s:Button id="exportAll" label="Export All"  enabled="false"/>
            <s:Button id="exportModified" label="Export Modified" visible="false"/>
          </s:VGroup>
        </s:FormItem>
        <s:FormItem width="250" >
          <s:Spacer width="10" height="10"/>
        </s:FormItem>
		
	        <s:Label text="Preview" width="250" height="10"/>
	        <s:HGroup width="250" height="50">
	        	<s:Button id="preview" label="Preview" enabled="false" />
	        	<s:Button id="export" label="Export"  enabled="false"/>
	      	</s:HGroup>

    </s:VGroup>
  </s:HGroup>
  <s:DataGrid id="errors" width="100%" height="395" visible="false">
    <s:typicalItem>
      <s:DataItem severity="Critical"
        location="multiple/segment/nested/path/of/some/depth:symbolName:layerName:12"
        message="An error message that's hopefully a normal length give or take a couple words"/>
    </s:typicalItem>
    <s:columns>
      <s:ArrayList>
        <s:GridColumn dataField="severity" headerText="Severity"/>
        <s:GridColumn dataField="location" headerText="Location"/>
        <s:GridColumn dataField="message" headerText="Reason"/>
      </s:ArrayList>
    </s:columns>
    <mx:ArrayCollection/>
  </s:DataGrid>
</s:Window>
